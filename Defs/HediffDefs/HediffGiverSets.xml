<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <HediffGiverSetDef>
    <defName>ArachneX</defName>
    <hediffGivers>
      
      <!-- Environmental -->
      <li Class="HediffGiver_Bleeding">
        <hediff>BloodLoss</hediff>
      </li>
      <li Class="HediffGiver_Hypothermia">
        <hediff>Hypothermia</hediff>
      </li>
      <li Class="HediffGiver_Heat">
        <hediff>Heatstroke</hediff>
      </li>


        <!-- Responsive and special -->
      <li Class="HediffGiver_BrainInjury">
        <hediff>TraumaSavant</hediff>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
        <chancePerDamagePct>0.12</chancePerDamagePct>
        <letterLabel>Trauma savant</letterLabel>
        <letter>[PAWN_nameDef]'s brain injury has caused [PAWN_pronoun] to develop strange savant-like abilities.</letter>
      </li>
    <li Class="HediffGiver_Birthday">
    <hediff>ArachneHealingFactor</hediff>
    <partsToAffect>
        <li>Torso</li>
    </partsToAffect>
    <ageFractionChanceCurve>
        <points>
            <li>(0, 0.01)</li>
            <li>(0.0001, 0.65)</li>
            <li>(30, 1.8)</li>
        </points>
    </ageFractionChanceCurve>
    <averageSeverityPerDayBeforeGeneration>0.000225</averageSeverityPerDayBeforeGeneration>
</li>
    </hediffGivers>
  </HediffGiverSetDef>
  
</Defs>
