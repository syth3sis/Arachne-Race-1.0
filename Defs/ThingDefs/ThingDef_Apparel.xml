<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ArmorSmithableBase">
    <defName>Arachne_Armor</defName>
    <label>Arachne Battle Armor</label>
    <description>Traditional arachne battle armor made by pounding metallic material into armor shape. \n *Armor strength is based on material used.</description>
    <graphicData>
      <texPath>Things/Armor/ArachneArmor</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <generateCommonality>2</generateCommonality>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
      <researchPrerequisite>PlateArmor</researchPrerequisite>
      <skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <stuffCategories>
      <li>Metallic</li>
    </stuffCategories>
    <costStuffCount>180</costStuffCount>
    <statBases>
      <WorkToMake>30000</WorkToMake>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>9</Mass>
      <Flammability>0.3</Flammability>
      <StuffEffectMultiplierArmor>0.74</StuffEffectMultiplierArmor>
      <Insulation_Cold>15</Insulation_Cold>
      <Insulation_Heat>15</Insulation_Heat>
      <EquipDelay>7</EquipDelay>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.5</MoveSpeed>
      <MeleeDodgeChance>0.25</MeleeDodgeChance>
    </equippedStatOffsets>
    <thingCategories>
      <li>ArachnePlate</li>
    </thingCategories>
    <apparel>
      <bodyPartGroups>
        <li>Torso</li>
        <li>Neck</li>
        <li>Shoulders</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <wornGraphicPath>Things/Armor/ArachneArmor</wornGraphicPath>
      <layers>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Arachne_BattleArmor</li>
      </tags>
    </apparel>
  </ThingDef>
